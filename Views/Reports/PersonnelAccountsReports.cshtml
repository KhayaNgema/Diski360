@model IEnumerable<MyField.Models.PersonnelAccountsReport>

@{
    ViewData["Title"] = "Personnel Accounts Reports";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<br />
@await Html.PartialAsync("_HomeButton")
<br />
<h4 class="text-center">Personnel Accounts Reports</h4>
<br />
<p class="text-center" style="padding-right:10px; padding-left:10px;">
    On this page, you can view personnel accounts reports, including detailed information on account statuses. This section provides a comprehensive overview of all personnel accounts, helping you manage and track their current statuses and activities effectively.
</p>
</br>
@if(Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-borderless">
            <thead>
                <tr style="color:white;background-color: #324260; white-space: nowrap;">
                    <th class="text-left vertical-align" style="width: 30%; padding-right: 20px;">
                        Category
                    </th>
                    <th class="text-right vertical-align" style="width: 70%; padding-left: 20px;">
                        Data
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="ellipsis">
                        <td class="text-left vertical-align" style="width: 30%; padding-right: 20px;">
                            Overall accounts count
                        </td>
                        <td class="text-right vertical-align" style="width: 70%; padding-left: 20px;">
                            @Html.DisplayFor(modelItem => item.OverallAccountsCount)
                        </td>
                    </tr>
                    <tr class="ellipsis">
                        <td class="text-left vertical-align" style="width: 30%; padding-right: 20px;">
                            Active accounts count
                        </td>
                        <td class="text-right vertical-align" style="width: 70%; padding-left: 20px;">
                            @Html.DisplayFor(modelItem => item.ActiveAccountsCount)
                        </td>
                    </tr>
                    <tr class="ellipsis">
                        <td class="text-left vertical-align" style="width: 30%; padding-right: 20px;">
                            Inactive accounts count
                        </td>
                        <td class="text-right vertical-align" style="width: 70%; padding-left: 20px;">
                            @Html.DisplayFor(modelItem => item.InactiveAccountsCount)
                        </td>
                    </tr>
                    <tr class="ellipsis">
                        <td class="text-left vertical-align" style="width: 30%; padding-right: 20px;">
                            Suspended accounts count
                        </td>
                        <td class="text-right vertical-align" style="width: 70%; padding-left: 20px;">
                            @Html.DisplayFor(modelItem => item.SuspendedAccountsCount)
                        </td>
                    </tr>
                    <tr class="ellipsis">
                        <td class="text-left vertical-align" style="width: 30%; padding-right: 20px;">
                            Active accounts rate
                        </td>
                        <td class="text-right vertical-align" style="width: 70%; padding-left: 20px;">
                            @Html.DisplayFor(modelItem => item.ActiveAccountsRate) %
                        </td>
                    </tr>
                    <tr class="ellipsis">
                        <td class="text-left vertical-align" style="width: 30%; padding-right: 20px;">
                            Inactive accounts rate
                        </td>
                        <td class="text-right vertical-align" style="width: 70%; padding-left: 20px;">
                            @Html.DisplayFor(modelItem => item.InactiveAccountsRate) %
                        </td>
                    </tr>
                    <tr class="ellipsis">
                        <td class="text-left vertical-align" style="width: 30%; padding-right: 20px;">
                            Suspended accounts rate
                        </td>
                        <td class="text-right vertical-align" style="width: 70%; padding-left: 20px;">
                            @Html.DisplayFor(modelItem => item.SuspendedAccountsRate) %
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="d-flex justify-content-center align-items-center" style="height: 60vh; flex-direction: column;">
        <p class="text-center">There are no reports yet.</p>
    </div>
}