@model IEnumerable<MyField.Models.TopScore>

@{
    ViewData["Title"] = "Top Scores";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<br />
@await Html.PartialAsync("_BackButton")
<br />
<h4 class="text-center">Top Scores</h4>
<br />
@if (Model.Any())
{
    <p class="text-center" style="padding-right:10px; padding-left:10px;">
        On this page, you can view the top 10 goal scorers. This section highlights the players who have scored the most goals, providing a clear view of the leading contributors in terms of goal-scoring performance.
    </p>
<br />
    <div class="table-responsive">
        <table id="playersTable" class="table table-striped table-borderless">
            <tbody>
                @foreach (var item in Model.Take(10))
                {
                    <tr>
                        <td>
                            <div style="display: flex; align-items: center;">
                                <img src="~/@item.Player.ProfilePicture" alt="@item.Player.FirstName" class="club-badge-image" style="border-radius: 50%; width: 50px; height: 50px; margin-right: 10px;" />
                                <div>
                                    <b><span style="font-size: 18px">@Html.DisplayFor(modelItem => item.Player.FirstName) @Html.DisplayFor(modelItem => item.Player.LastName)</span></b>
                                    <b>(#@Html.DisplayFor(modelItem => item.Player.JerseyNumber))</b>
                                    <div style="font-size: 16px">@Html.DisplayFor(modelItem => item.Player.Club.ClubName)</div>
                                </div>
                            </div>
                        </td>
                        <td style="vertical-align: middle; text-align: center;">
                            <h4>
                                @Html.DisplayFor(modelItem => item.NumberOfGoals)
                            </h4>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p class="text-center" style="margin-top: 20vh; margin-bottom: 20vh;">There are no top scores yet.</p>
}
