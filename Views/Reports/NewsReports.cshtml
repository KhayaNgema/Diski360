@model MyField.Models.OverallNewsReport

@{
    ViewData["Title"] = "News Reports";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<br />
@await Html.PartialAsync("_HomeButton")
<br />
<h4 class="text-center">News Reports</h4>
<br />
<p class="text-center" style="padding-right:10px; padding-left:10px;">
    On this page, you can view all news reports. This includes a comprehensive list of news items and their detailed updates. Additionally, you can see the overall reader count for all news reports combined, giving you insight into the total engagement with your news content.
</p>
<br />
@if (Model != null)
{
    <div class="table-responsive">
        <table class="table table-striped table-borderless">
            <thead>
                <tr style="color:white;background-color: #324260; white-space: nowrap;">
                    <th class="text-left vertical-align" style="width: 30%; padding-right: 20px;">Category</th>
                    <th class="text-right vertical-align" style="width: 70%; padding-left: 20px;">Data</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="text-left vertical-align" style="width: 30%; padding-right: 20px;">Authored news count</td>
                    <td class="text-right vertical-align" style="width: 70%; padding-left: 20px;">
                        @Html.DisplayFor(modelItem => Model.AuthoredNewsCount)
                    </td>
                </tr>
                <tr>
                    <td class="text-left vertical-align" style="width: 30%; padding-right: 20px;">Approved news count</td>
                    <td class="text-right vertical-align" style="width: 70%; padding-left: 20px;">
                        @Html.DisplayFor(modelItem => Model.ApprovedNewsCount)
                    </td>
                </tr>
                <tr>
                    <td class="text-left vertical-align" style="width: 30%; padding-right: 20px;">Published news count</td>
                    <td class="text-right vertical-align" style="width: 70%; padding-left: 20px;">
                        @Html.DisplayFor(modelItem => Model.PublishedNewsCount)
                    </td>
                </tr>
                <tr>
                    <td class="text-left vertical-align" style="width: 30%; padding-right: 20px;">Rejected news count</td>
                    <td class="text-right vertical-align" style="width: 70%; padding-left: 20px;">
                        @Html.DisplayFor(modelItem => Model.RejectedNewsCount)
                    </td>
                </tr>
                <tr>
                    <td class="text-left vertical-align" style="width: 30%; padding-right: 20px;">News readers count</td>
                    <td class="text-right vertical-align" style="width: 70%; padding-left: 20px;">
                        @Html.DisplayFor(modelItem => Model.NewsReadersCount)
                    </td>
                </tr>
                <tr>
                    <td class="text-left vertical-align" style="width: 30%; padding-right: 20px;">Approved news rate</td>
                    <td class="text-right vertical-align" style="width: 70%; padding-left: 20px;">
                        @Html.DisplayFor(modelItem => Model.ApprovedNewsRate) %
                    </td>
                </tr>
                <tr>
                    <td class="text-left vertical-align" style="width: 30%; padding-right: 20px;">Published news rate</td>
                    <td class="text-right vertical-align" style="width: 70%; padding-left: 20px;">
                        @Html.DisplayFor(modelItem => Model.PublishedNewsRate) %
                    </td>
                </tr>
                <tr>
                    <td class="text-left vertical-align" style="width: 30%; padding-right: 20px;">Rejected news rate</td>
                    <td class="text-right vertical-align" style="width: 70%; padding-left: 20px;">
                        @Html.DisplayFor(modelItem => Model.RejectedNewsRate) %
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
}
else
{
    <div class="d-flex justify-content-center align-items-center" style="height: 60vh; flex-direction: column;">
        <p class="text-center">No report data available.</p>
    </div>
}
