@model IEnumerable<MyField.Models.TestUserFeedback>
@inject MyField.Interfaces.IEncryptionService encryptionService
@{
    ViewData["Title"] = "Feedback";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<br />
@await Html.PartialAsync("_HomeButton")
<h4 style="text-align:center;">Testing Feedback</h4>
<br />
<p class="text-center" style="padding-right:10px; padding-left:10px;">
    You are currently viewing feedback from users.
</p>

<br />
@if (Model.Any())
{

    <br />
    <div class="table-responsive">
        <table class="table table-striped table-borderless">
            <thead>
                <tr style="color:white;background-color: #324260; white-space: nowrap;">
                    <th>
                        Feedback message
                    </th>
                    <th>
                        Time stamp
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="max-width: 400px;">
                        <td>
                            @Html.DisplayFor(modelItem => item.FeedbackText)
                        </td>
                        <td>
                            @item.CreatedDateTime.ToString("ddd, dd/MM/yyyy, HH:mm")
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p class="text-center" style="margin-top: 20vh; margin-bottom: 20vh;">There is no feedback yet</p>
}
