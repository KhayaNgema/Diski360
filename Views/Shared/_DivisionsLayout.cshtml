@using Microsoft.AspNetCore.Identity
@inject SignInManager<UserBaseModel> SignInManager
@using MyField.Models;
@using MyField.Interfaces;
@using MyField.Data
@inject IEncryptionService EncryptionService
@inject Ksans_SportsDbContext _context

@{
    var divisionId = ViewBag.DivisionId as string;

    Division division = null;

    var decryptedDivisionId = EncryptionService.DecryptToInt(divisionId);

    if (!string.IsNullOrEmpty(divisionId))
    {
        division = _context.Divisions
            .Where(d => d.DivisionId == decryptedDivisionId)
            .FirstOrDefault();
    }

    var divisionBadge = division.DivisionBadge;

    ViewBag.DivisionName = division.DivisionName;

    var customers = _context.Divisions
            .ToList();

}




