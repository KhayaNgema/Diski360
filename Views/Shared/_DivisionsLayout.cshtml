<script>


    $(document).ready(function () {

        $(document).on('click', '.action-button', function () {
            var id = $(this).data('id');
            var $actionTab = $('#actionTab-' + id);
            $('.action-tab').not($actionTab).hide();
            $actionTab.toggle();
        });

        $(document).on('click', function (event) {
            var $target = $(event.target);
            if (!$target.closest('.action-tab').length && !$target.closest('.action-button').length) {
                $('.action-tab').hide();
            }
        });

        $(document).on("contextmenu", function (e) {
            e.preventDefault();
        });

        $(document).keydown(function (e) {
            if (
                e.keyCode == 123 ||
                (e.ctrlKey && e.shiftKey && e.keyCode == 73) ||
                (e.ctrlKey && e.shiftKey && e.keyCode == 67) ||
                (e.ctrlKey && e.keyCode == 85) ||
                (e.ctrlKey && e.shiftKey && e.keyCode == 74)
            ) {
                e.preventDefault();
            }
        });


    });


    function toggleMenu() {
        $('#menu').toggleClass('show');
        $('#overlay').toggle();
    }

    $('#menu-toggle').on('click', function (e) {
        e.preventDefault();
        toggleMenu();
    });

    $('#overlay').on('click', function () {
        $('#menu').removeClass('show');
        $(this).hide();
    });



    document.addEventListener("DOMContentLoaded", function () {
        function adjustBodyPadding() {
            var loginNav = document.getElementById('loginNav');
            var homeTabsNav = document.getElementById('homeTabsNav');
            var scrollTextNav = document.getElementById('scrollTextNav');
            var divisionNav = document.getElementById('divisionNav');


            var loginNavHeight = loginNav ? loginNav.offsetHeight : 0;
            var homeTabsNavHeight = homeTabsNav ? homeTabsNav.offsetHeight : 0;
            var scrollTextNavHeight = scrollTextNav ? scrollTextNav.offsetHeight : 0;
            var divisionNavNavHeight = divisionNav ? divisionNav.offsetHeight : 0;

            var totalPadding = loginNavHeight + homeTabsNavHeight + scrollTextNavHeight + divisionNavNavHeight;
            document.body.style.paddingTop = totalPadding + 'px';
        }

        adjustBodyPadding();

        window.addEventListener('resize', adjustBodyPadding);
    });

    function loadTab(tabName) {

        $('.nav-link').removeClass('active');
        $('.tab-pane').removeClass('show active');

        $('#' + tabName + '-tab').addClass('active');
        $('#' + tabName).addClass('show active');

        if ($('#' + tabName).html().trim() === '') {
            var url;
            var divisionId = '@divisionId'

            switch (tabName) {
                case 'sportnews':
                    url = '@Url.Action("SportNewsIndexDivision", "SportNews")';
                    break;
                case 'fixtures':
                    url = '@Url.Action("LeagueFixtures", "Fixtures")';
                    break;
                case 'standings':
                    url = '@Url.Action("StandingsMain", "Standings")';
                    break;
                case 'matchresults':
                    url = '@Url.Action("LeagueResults", "MatchResults")';
                    break;
                case 'clubs':
                    url = '@Url.Action("LeagueClubs", "Clubs")';
                    break;
                case 'players':
                    url = '@Url.Action("AllDivisionPlayers", "Users")';
                    break;
                default:
                    console.error('Unknown tab:', tabName);
                    return;
            }

            $.ajax({
                url: url,
                type: 'GET',
                data: {
                    divisionId: divisionId
                },
                success: function (data) {
                    $('#' + tabName).html(data);
                },
                error: function (xhr, textStatus, errorThrown) {
                    console.error("Error:", errorThrown);
                }
            });
        }
    }

    $(document).ready(function () {

        const path = window.location.pathname;
        const pathSegments = path.split('/').filter(Boolean);
        const pathTab = pathSegments.length > 0 ? pathSegments[pathSegments.length - 1] : '';

        const urlParams = new URLSearchParams(window.location.search);

        let initialTab = 'sportnews';

        if (pathTab && ['clubs', 'fixtures', 'standings', 'matchresults', 'players'].includes(pathTab)) {
            initialTab = pathTab;
        } else if (urlParams.has('tab')) {
            const tabValue = urlParams.get('tab');
            if (['clubs', 'fixtures', 'standings', 'matchresults', 'players'].includes(tabValue)) {
                initialTab = tabValue;
            }
        }

        loadTab(initialTab);
    });

    var divisionId = '@divisionId'

    function fetchNewsDivision(divisionId) {
        $.ajax({
            url: '/SportNews/NewsMainDivision',
            data: { divisionId: divisionId },
            success: function (data) {
                $('#newsContentDivision').html(data);
            }
        });
    }

    $(document).ready(function () {
        fetchNewsDivision(divisionId);
    });



    $(window).on('load', function () {
        var loadingOverlay = $('#loading-overlay');

        loadingOverlay.hide();

        $('.loading-spinner').css('animation', 'none');
    });

    $(document).on('click', 'a:not([href^="#"])', function () {
        var loadingOverlay = $('#loading-overlay');

        loadingOverlay.show();
    });
</script>

