@{
    ViewData["Title"] = "Join " + ViewBag.TournamentName;
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<div class="successfulSubscriptionContainer">
<div class="alert text-center" role="alert">
    <div class="mb-3" style="font-weight:bold;">
        <h2>
            <div class="checkmark-container">
                <div class="checkmark"></div>
            </div>
        </h2>
        <br />
        <h4>Tournament Joining Request Sent Successfully!</h4>
    </div>
        <h5 class="mb-3">
            🎉 Dear @ViewBag.ClubName, your request to join the <strong>@ViewBag.TournamentName</strong> has been received and is currently being reviewed by our management. Relevant parties will contact you if any information is missing.
        </h5>

    <h5 class="mb-3">💳 Please make your payment using the banking details below:</h5>
        <p style="color:red">
            <strong>Note:</strong> Your club will only be officially included in <strong>@ViewBag.TournamentName</strong> once the joining fee is paid.
            Late payments may lead to automatic removal, and refunds must be requested manually.
            💡 If you choose to pay later, check your email for the payment link.
            Prefer bank deposit? Be sure to screenshot the banking details below for your records.
        </p>

    <div class="mt-3 text-start d-inline-block">
        🏦 <strong>Bank Name:</strong> MyLocal Bank<br />
        👤 <strong>Account Name:</strong> Local Sports Club<br />
        🔢 <strong>Account Number:</strong> 123456789<br />
        🏛️ <strong>Branch Code:</strong> 001122<br />
        📝 <strong>Reference:</strong> Your Full Name or Team Name
    </div>
    <br />
    <h3>
        Or
    </h3>

        <div class="mt-4 d-flex justify-content-center gap-3">
            <a href="/Payment/PayNow" id="addButton" class="btn btn-md shadow" style="padding: 10px 20px;">
                💰 Pay Now
            </a>
            <a href="/Home/Index" class="btn btn-secondary btn-md shadow" style="padding: 10px 20px;">
                🕒 Pay Later
            </a>
        </div>

</div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {

        var checkmark = document.querySelector('.checkmark');
        checkmark.style.display = 'block';
    });
</script>
