
<div class="standingsHeader" style="background-image: url('/Images/my_banner.jpg'); color:white;">
    <br />
    <p class="text-center" style="font-size:36px; font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">Tournaments</p>
    <br />
</div>
<div>
    <div>
        <div style="margin-bottom:10px;" id="tournamentsContent"> </div>
    </div>
</div>

<script>
    function fetchTournaments() {
        $.ajax({
            url: '/Tournaments/AllTournaments',
            success: function (data) {
                $('#tournamentsContent').html(data);
                initializeToggleDetails();
            }
        });
    }

    $(document).ready(function () {
        fetchTournaments();
    });

    function initializeToggleDetails() {
        $('.toggle-details-btn').off('click').on('click', function () {
            var targetModal = $(this).data('target');  
            $(targetModal).modal('show');  
        });
    }
</script>


